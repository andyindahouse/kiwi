{
    "printWidth": 110,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "proseWrap": "always",
    "overrides": [
        {
            "files": "package.json",
            "options": {
                "printWidth": 250
            }
        },
        {
            "files": ".ci.yml",
            "options": {
                "printWidth": 150
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}